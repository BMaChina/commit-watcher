<h1>Editing Rule</h1>

<%= form_for :rule, url: rule_path(@rule.id), method: :patch do |f| %>

  <% if @rule.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@rule.errors.count, "error") %> prohibited
        this rule from being saved:
      </h2>
      <ul>
        <% @rule.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :rule_type_id %><br>
    <%= f.select :rule_type_id, RuleTypes.collect { |k, v| [v[:name], k] } %>
  </p>

  <p>
    <%= f.label :value %><br>
    <%= f.text_area :value %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', rules_path %>
