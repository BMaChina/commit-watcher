<h1>New Rule</h1>

<%= link_to 'Back', rules_path %>

<%= form_for :rule, url: rules_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :rule_type_id %><br>
    <%= f.select :rule_type_id, RuleTypes.collect { |k, v| [v[:name], k] } %>
  </p>

  <p>
    <%= f.label :value %><br>
    <%= f.text_area :value %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
