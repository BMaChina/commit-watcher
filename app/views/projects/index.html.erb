<h1>Projects</h1>

<p><%= link_to 'Dashboard', controller: 'dashboard' %></p>

<%= link_to 'New Project', new_project_path %>
<table border="1" cellpadding="10">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Rule Sets</th>
    <th>Next Audit</th>
    <th>Last Commit Time</th>
    <th>Date Created</th>
    <th colspan="2"></th>
  </tr>

  <% @projects.each do |project| %>
    <tr>
      <td><%= project.id %></td>
      <td><%= project.name %></td>
      <td><%= project.rule_sets %></td>
      <td><%= project.next_audit %></td>
      <td><%= project.last_commit_time %></td>
      <td><%= project.date_created %></td>
      <td><%= link_to 'Edit', edit_project_path(project.id) %></td>
      <td><%= link_to 'Delete', project_path(project.id),
        method: :delete,
        data: { confirm: 'Really? Are you being serious right now?' } %></td>
    </tr>
  <% end %>
</table>
