<h1>Editing Project</h1>

<%= form_for :project, url: project_path(@project.id), method: :patch do |f| %>

  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@project.errors.count, "error") %> prohibited
        this project from being saved:
      </h2>
      <ul>
        <% @project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :rules %><br>
    <%= f.text_area :rules %>
  </p>

  <p>
    <%= f.label :ignore_global_rules %><br>
    <%= f.check_box :ignore_global_rules %>
  </p>

  <p>
    <%= f.label :next_audit %><br>
    <%= f.text_field :next_audit %>
  </p>

  <p>
    <%= f.label :last_commit_time %><br>
    <%= f.text_field :last_commit_time %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', projects_path %>
